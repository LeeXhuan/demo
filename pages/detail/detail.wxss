/* pages/detail/detail.wxss */
.x-detail-bg{
  position: absolute;
  top: 0;
  right: 0;
  background: #212526;
  width: 100%;
  height: 100%;
}
.x-detail-con{
  margin: 100rpx auto 0;
  width: 616rpx;
  height: 792rpx;
}
.x-title{
  padding: 62rpx 48rpx 74rpx 72rpx;
  display: flex;
  align-items:center;
}
.x-title-text{
  flex: 3;
  color: #fff;
  font-size: 32rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.x-title-icon{
  width: 56rpx;
  height: 56rpx;
}
.x-price-text{
  height: 88rpx;
  font-size: 48rpx;
  color: #fff;
  padding-left: 72rpx;
  line-height: 88rpx;
  margin-bottom: 24rpx;
}
.x-sent-icon{
  width: 128rpx;
  height: 48rpx;
  margin-left: 72rpx;
  margin-bottom: 58rpx;
}
.x-user-info{
  display: flex;
  align-items:center;
  padding: 0 48rpx 0 72rpx;
}
.x-use-icon{
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx; 
}
.x-user-text{
  flex: 3;
  font-size: 28rpx;
  color: #fff;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.x-content{
  display: flex;
  align-items:center;
  padding: 110rpx 48rpx 26rpx 72rpx;
}
.x-content-text{
  flex: 3;
  font-size: 36rpx;
  color: #202728;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.x-content-icon{
  width: 40rpx;
  height: 40rpx;
}
.x-button,
.x-button-use{
  margin: 0 48rpx 0 72rpx;
  width: 152rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #fff;
  background: #00D1F5;
  border-radius: 8rpx;
}
.x-button-use{
  background: #D0F8FF;
  color: #00D1F5;
}
.x-receive{
  float: right;
  margin-right: 48rpx;
  font-size: 24rpx;
  color: #00D1F5;
}
.x-detail-bottom{
  margin: 180rpx auto;
  width: 226rpx;
  height: 82rpx;
  line-height: 82rpx;
  color: #fff;
  border-radius: 12rpx;
  background: rgba(0,0,0,0.23);
  text-align: center;
  font-size: 36rpx;
}