/**index.wxss**/
#l-index .l-flex{
    display: flex;
}
#l-index .l-nav{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    justify-content: space-around;
    height: 104rpx;
    line-height: 104rpx;
    font-size: 28rpx;
    color: #6E7375;
    background: #fff;
    z-index: 999;
}
#l-index .l-active{
    color: #00D1F5;
}
#l-index .l-container{
    margin-top: 104rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 100%;
    box-sizing: border-box;
    padding: 0 42rpx 0;
}
#l-index .l-container .l-list{
    margin-top: 32rpx;
    width: 308rpx;
    height: 396rpx;
    box-sizing: border-box;
    padding: 40rpx 48rpx 40rpx 40rpx;
}
#l-index .l-container .l-list .l-title{
    display: flex;
    justify-content: space-between;
}
#l-index .l-container .l-list .l-title .l-name{
    font-size: 28rpx;
    color: #FFFFFF;
    line-height: 44rpx;
    width: 128rpx;
    height: 88rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
#l-index .l-container .l-list .l-title .l-icon{
    width: 84rpx;
    height: 32rpx;
    margin-top: 8rpx;
}
#l-index .l-container .l-list .l-money{
    font-size: 56rpx;
    color: #FFFFFF;
    line-height: 88rpx;
}
#l-index .l-container .l-list .l-source{
    margin-top: 80rpx;
    width: 100%;
    font-size: 28rpx;
    color: #737779;
    text-align: center;
    line-height: 24px;
}
#l-index .l-no-data{
    position: absolute;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
}
#l-index .l-no-data .no-data-img{
    display: block;
    width: 200rpx;
    height: 200rpx;
}
#l-index .l-no-data .no-data-text{
    margin-top: 24rpx;
    font-size: 32rpx;
    color: #8F989D;
    text-align: center;
}