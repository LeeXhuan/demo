/* pages/notice/notice.wxss */
#l-notice{
    position: absolute;
    top: 0;
    right: 0;
    background: #212526;
    width: 100%;
    height: 100%;
    display: flex;
}
#l-notice .l-container{
    box-sizing: border-box;
    width: 616rpx;
    height: 792rpx;
    background-color: #fff;
    margin: 100rpx auto 0;
    border-radius: 4rpx;
    padding: 48rpx 64rpx 48rpx;
}
#l-notice .l-container .l-title{
    font-size: 36rpx;
    color: #202728;
    line-height: 48rpx;
}
.l-text{
    margin-top: 32rpx;
    font-size: 28rpx;
    color: #202728;
    line-height: 44rpx;
}
#l-notice .l-container .l-container-text{
    height: 580rpx;
    overflow: scroll;
}
#l-notice .l-container .l-footer{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #00D1F5;
    line-height: 36px;
}